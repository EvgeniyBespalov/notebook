<table class="tableNote">
  <tr>
	 <th colspan="2">Просмотр заметки</th>
  </tr>
	<tr>
    <td>Тема</td>
    <td><%= @note.header%></td>
  </tr>
  <tr>
    <td>Текст</td>
    <td><%= @note.text%></td>
  </tr>
	<tr>
    <td>Метки</td>
    <td>
      <% @note_tags.each do |nt|  %>
        <%= check_box_tag "note_tags[]", nt.id, @note.note_tags.exists?(nt.id), disabled: true %>
        <%= nt.description  %>
      <% end %>
    </td>
  </tr> 
 </table>